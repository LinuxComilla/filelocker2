#set $config = $cherrypy.request.app.config['filelocker']
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Developed at Purdue University, Filelocker allows you to share files with other people both inside and outside of your organization. It is a temporary and secure storage system for sharing files and data."/> 
    <meta name="keywords" content="filelocker, encryption, security application, enterprise, auditing, secure storage, information security, online storage, file sharing, share files, online backup, sharing, collaboration" /> 
    <title>Filelocker</title>
    <script type="text/javascript">
        var FILELOCKER_ROOT = "$config['root_url']";
        var USER_QUOTA = $user.quota;
        var HOST_IP = "$cherrypy.request.remote.ip";
        var DEFAULT_EXPIRATION = "$defaultExpiration.strftime('%m/%d/%Y')";
        #if $config['geotagging']
        var GEOTAGGING = true;
        #else
        var GEOTAGGING = false;
        #end if
        #if $cherrypy.session.has_key('sawBanner') or $config['banner'] is None or $config['banner'] == ""
        var BANNER = false;
        #else
        var BANNER = true;
        #end if
    </script>
    <link rel="stylesheet" href="$config['root_url']/css?style=jquery-ui" />
    <link rel="stylesheet" href="$config['root_url']/css?style=visualize" />
    <link rel="stylesheet" href="$config['root_url']/css?style=filelocker" />
    <link rel="shortcut icon" href="$config['root_url']/static/images/favicon.ico" />
    <!--[if IE]><script src="$config['root_url']/static/js/excanvas.js" type="text/javascript"></script><![endif]-->
    <script src="$config['root_url']/static/js/jquery.js" ></script>
    <script src="$config['root_url']/static/js/jquery.ui.js"></script>
    <script src="$config['root_url']/static/js/jquery.tablesorter.js"></script>
    <script src="$config['root_url']/static/js/jquery.tipsy.js"></script>
    <script src="$config['root_url']/static/js/jquery.visualize.js"></script>
    <script src="$config['root_url']/static/js/fileuploader.js"></script>
    <script src="$config['root_url']/static/js/global.js"></script>
    <script src="$config['root_url']/static/js/filelocker.js"></script>
    #if $config['geotagging']
    <script src="$config['root_url']/static/js/geo.js"></script>
    #end if
    #if $AccountController.user_has_permission($user, "admin")
    <script src="$config['root_url']/static/js/admin.js"></script>
    #end if
</head>
<body class="greyBackground">
<div id="background">
    <div id="wrapper_all">
    <!--header-->
    <div id="wrapper_header">
        <div class="logo"><a href="$config['root_url']"><img src="$config['root_url']/static/images/logos/filelocker_logo.png" alt="Filelocker" /></a></div>
        <table>
        <tr>
        <td id="nameRoleContainer">
    #if $user.is_role == False
        #if len($roles) == 0
            <div class="userLoggedIn">$user.display_name ($user.id)</div>
        #else
            <div class="userLoggedInMultiple pseudoLink" title="Switch to a role" onclick="javascript:toggleRoles()">$user.display_name ($user.id)</div>
            <span id="availableRoles">
            #for $role in $roles
                <div class="roleLoggedIn pseudoLink" title="Switch to '$role.id'" onclick="javascript:switchRoles('$role.id');" style="display: none;">$role.display_name ($role.id)</div><br/>
            #end for
            </span>
        #end if
    #else
        #if $cherrypy.session.get("original_user").id is not None and $cherrypy.session.get("original_user").id != $user.id
            <div class="roleLoggedInMultiple pseudoLink" title="Switch back to a user" onclick="javascript:toggleRoles()">$user.display_name ($user.id)</div>
            <span id="availableRoles">
                <div class="userLoggedIn pseudoLink" title="Switch back to '$cherrypy.session.get('original_user').id'" onclick="javascript:switchRoles();" style="display: none;">$cherrypy.session.get("original_user").display_name ($cherrypy.session.get("original_user").id)</div>
            </span>
        #else
            <div class="roleLoggedIn">$user.display_name ($user.id)</div>
        #end if
    #end if
        </td>
        <td><div id="historyLink" class="history"><a href="javascript:dismissStatusMessage();javascript:loadHistory();" title="View your interactions with Filelocker">History</a></div></td>
        #if $AccountController.user_has_permission($user, "admin")
            <td id="adminBackLink"><div id="adminLink" class="settings"><a href="javascript:loadAdminInterface()" title="Launch the admin panel">Admin</a></div></td>
        #else
            <td><div id="accountLink" class="settings"><a href="javascript:dismissStatusMessage();javascript:loadEditAccount()" title="Edit your account settings">Account</a></div></td>
        #end if
      </tr>
      <tr>
        <td><div class="quotaText">User Quota:&nbsp;</div><span id="quotaProgressBar" class="quota"></span></td>
        <td><div id="messagesLink" class="messages"><a href="javascript:viewMessages();">Messages</a></div></td>
        <td><div class="logout"><a href="$config['root_url']/logout" title="Logout of Filelocker">Logout</a></div></td>
      </tr>
      </table>
    </div>
    
    <!--content area-->
    <div id="statusMessageWrapper"><div id="statusMessage" class="ui-widget ui-state-error hidden"></div></div>
    <div id="wrapper_2col">
